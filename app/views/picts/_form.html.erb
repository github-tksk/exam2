<p id="notice"><%= notice %></p>

<%= form_for(@pict, url: choose_new_or_edit) do |f| %>
  <% if @pict.errors.any? %>
    <div id="error_explanation">
      <h2><%= @pict.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @pict.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= pict_img(@pict) if pict_img(@pict) %>
  <%= f.file_field :avatar, class: 'form-control' %>
  <%= f.hidden_field :avatar_cache %>
  <br>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>

  <%= f.submit '投稿', class: 'btn btn-warning btn-block' %>
<% end %>

<%= link_to "一覧画面に戻る", picts_path %>
